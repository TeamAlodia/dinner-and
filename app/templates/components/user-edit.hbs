{{#if (isLoggedIn user.id sessionID)}}
  <div class="container" style="margin:10px">
    <form class="ui form" id="user_edit_form" {{action "updateUser" user on="submit"}}>
      <div class="ui horizontal divider">Edit Profile</div>
      <div class="field">
        <div class="three fields">
          <div class="field">
            <label>Username</label>
            {{input value=user.name placeholder="username" id="name_edit"}}
          </div>
          <div class="field">
            <label>Age</label>
            {{input type="number" value=user.age placeholder="age" id="age_edit"}}
          </div>
          <div class="field">
            <label>Zip Code</label>
            {{input value=user.zip placeholder="zip code" id="zip_edit"}}
          </div>
        </div>
      </div>
      <div class="field">
        <div class="sixteen wide field">
          <label>Tell us a bit about yourself</label>
          {{textarea value=user.about id="about_edit"}}
        </div>
      </div>
      <div class="field">
        <div class="sixteen wide field">
          <label>Avatar (URL Only)</label>
          {{input value=user.avatar placeholder="http://" id="avatar_edit"}}
        </div>
      </div>
      <div class="ui error message"></div>
      <button class="ui button circular fluid" style="background-color:#EEF3E2;margin-top:10px;" type="submit">Update Profile</button>
    </form>
    <div class="ui horizontal divider">Edit Interests</div>
    {{interests-edit interests=interests user=user addInterests="addInterests"}}
  </div>
{{/if}}
